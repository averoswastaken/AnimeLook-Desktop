{
  "name": "animelook-desktop",
  "version": "2.6.5",
  "description": "AnimeLook için masaüstü uygulaması",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "publish": "electron-builder --win --publish always"
  },
  "author": "AnimeLook",
  "license": "SEE LICENSE IN LICENSE",
  "devDependencies": {
    "dotenv-cli": "^7.3.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "discord-rpc": "^4.0.1",
    "electron-log": "^5.3.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "semver": "^7.7.1"
  },
  "build": {
    "appId": "com.animelook.desktop",
    "productName": "AnimeLook",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "executableName": "AnimeLook"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AnimeLook",
      "displayLanguageSelector": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "averoswastaken",
        "repo": "AnimeLook-Desktop",
        "private": false,
        "releaseType": "release"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/averoswastaken/AnimeLook-Desktop.git"
  }
}
